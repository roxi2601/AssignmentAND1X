<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayoutItem"
        android:layout_width="606dp"
        android:layout_height="770dp"
        android:layout_marginStart="4dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/photopet"
            android:layout_width="602dp"
            android:layout_height="400dp"
            android:src="@drawable/tosia"
            app:srcCompat="@drawable/tosia"
            tools:srcCompat="@drawable/tosia" />

        <TextView
            android:id="@+id/titleOffer"
            style="Clothes"
            android:layout_width="613dp"
            android:layout_height="65dp"
            android:text="Title"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

        <TextView
            android:id="@+id/description"
            android:layout_width="598dp"
            android:layout_height="160dp"
            android:text="DescriptionDescriptionDescriptionDescriptionDescriptionDescriptionDescriptionDescriptionDescriptionDescriptionDescriptionDescriptionDescriptionDescriptionDescriptionDescriptionDescriptionDescriptionDescriptionDescriptionDescriptionDescriptionDescriptionDescriptionDescriptionDescription"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <Button
            android:id="@+id/buttonSeeMore"
            android:layout_width="606dp"
            android:layout_height="wrap_content"
            android:background="#E6DB9F"
            android:backgroundTint="#B55959"
            android:text="See more" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>